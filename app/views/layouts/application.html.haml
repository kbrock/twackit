!!! Strict
%html
  %head
    / %link{ :rel => "shortcut icon", :href => "/favicon.ico", :type => "image/x-icon" }
    %title
      Twackit - 
      = yield(:page_title) || 'Whatever it is, track it with Twackit!'
      
    = stylesheet_link_tag 'reset'
    = stylesheet_link_tag 'screen'
    / = javascript_include_tag :defaults

  %body  
    #page
      #header

        #report-form
          - form_tag root_path do
            http://www.twackit.com/
            = text_field_tag :twitter_username, @twitter_username || 'your Twitter username'
            = '/'
            = text_field_tag :hashtag, @hashtag || 'your twacking hashtag'
            = submit_tag 'Report &raquo;'

  
        %h1
          = link_to 'Twackit', root_path
        %p Whatever it is, track it with Twackit!
    
      #content
        /= flash_messages
        = yield

      #footer
        %p
          Copyright &copy; 2009, 
          == #{link_to 'twackit.com', 'http://www.twackit.com'}.
          All rights reserved.
